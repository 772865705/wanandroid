<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SearchActivity">

    <include layout="@layout/include_toolbar_search" />

    <com.zy.zywanandroid.view.AutoWrapLayout
        android:id="@+id/wrap_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_divider" />

    <TextView
        android:gravity="right"
        android:id="@+id/tv_delete_search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "8dp"
        android:text="@string/delete_history" />

    <com.zy.zywanandroid.view.AutoWrapLayout
        android:id="@+id/wrap_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>